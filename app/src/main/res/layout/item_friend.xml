<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/usercenter_item_friend_height">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/usercover"
        android:layout_width="@dimen/usercenter_item_catoon_imagewidth"
        android:layout_height="@dimen/usercenter_item_catoon_imagewidth"
        android:layout_margin="@dimen/usercenter_item_friend_padding" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/chat"
        android:layout_width="@dimen/usercenter_item_catoon_imagewidth"
        android:layout_height="@dimen/usercenter_item_catoon_imagewidth"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/usercenter_item_friend_padding"
        android:background="@drawable/ic_usercenter_frend_chat" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/usercover"
        android:singleLine="true"
        android:layout_toRightOf="@id/usercover"
        android:layout_toLeftOf="@id/chat"
        android:textColor="@color/textColorPrimary"
        android:text="用户名" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/username"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        android:layout_marginBottom="@dimen/usercenter_item_friend_padding"
        android:background="@drawable/bg_usercenter_level"
        android:textColor="@color/textAccent"
        android:text="LV 0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divierColor"
        android:layout_alignParentBottom="true" />

</RelativeLayout>