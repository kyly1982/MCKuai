<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/color_forum_selected" />

            <corners android:radius="@dimen/community_forum_radius" />

            <size android:height="@dimen/community_forum_height" android:width="@dimen/community_forum_height" />
        </shape>
    </item>
    <item android:state_checked="false" android:drawable="@null">
        <shape>
            <solid android:color="@color/color_forum_normal" />

            <corners android:radius="@dimen/community_forum_radius" />

            <size android:height="@dimen/community_forum_height" android:width="@dimen/community_forum_height" />
        </shape>
    </item>

</selector>